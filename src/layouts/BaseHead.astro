---
import { type CollectionEntry } from "astro:content";
import { ClientRouter } from "astro:transitions";

// component imports
import Seo from "@components/Seo/Seo.astro";

// data
import siteData from "@config/siteData.json";

export interface Props {
	type?: "general" | undefined;
	title: string;
	description: string;
	image?: ImageMetadata;
	noindex?: boolean;
}

const { type = "general", title, description, image, noindex = false } = Astro.props as Props;

import WorkSansVariable from "@fontsource-variable/work-sans/files/work-sans-latin-wght-normal.woff2";
import RalewayVariable from "@fontsource-variable/raleway/files/raleway-latin-wght-normal.woff2";
import PlayfairDisplayVariable from "@fontsource-variable/playfair-display/files/playfair-display-latin-wght-normal.woff2";
import CinzelDecorative from "@fontsource/cinzel-decorative/files/cinzel-decorative-latin-400-normal.woff2";
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" , initial-scale="1.0" />

<!-- local font preload for better performance when not using ClientRouter -->
<link rel="preload" href={WorkSansVariable} as="font" type="font/woff2" crossorigin="anonymous" />
<link rel="preload" href={RalewayVariable} as="font" type="font/woff2" crossorigin="anonymous" />
<link
	rel="preload"
	href={PlayfairDisplayVariable}
	as="font"
	type="font/woff2"
	crossorigin="anonymous"
/>
<link rel="preload" href={CinzelDecorative} as="font" type="font/woff2" crossorigin="anonymous" />

<!-- Favicon & App Icons -->
<link rel="icon" type="image/x-icon" href="/favicons/favicon.ico" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png" />
<link rel="manifest" href="/favicons/site.webmanifest" />
<link rel="apple-touch-icon" href="/favicons/apple-touch-icon.png" />

<!-- Android Web App Icons -->
<link rel="icon" type="image/png" sizes="192x192" href="/favicons/android-chrome-192x192.png" />
<link rel="icon" type="image/png" sizes="512x512" href="/favicons/android-chrome-512x512.png" />


<meta name="generator" content={Astro.generator} />
<link rel="sitemap" href="/sitemap-index.xml" />


<meta name="google-site-verification" content="dpFCT-bf-zv3CCoN_UN-F1ouEry0YDJmpfofFvwwD_c" />

<script type="application/ld+json">
	{
	  "@context": "https://schema.org",
	  "@type": "LocalBusiness",
	  "name": "Soluna Sites",
	  "image": "https://solunasites.com/images/logo.png",
	  "url": "https://solunasites.com",
	  "telephone": "+1-407-497-2285",
	  "address": {
		"@type": "PostalAddress",
		"addressLocality": "Orlando",
		"addressRegion": "FL",
		"postalCode": "32801",
		"addressCountry": "US"
	  },
	  "geo": {
		"@type": "GeoCoordinates",
		"latitude": 28.5383,
		"longitude": -81.3792
	  },
	  "openingHoursSpecification": {
		"@type": "OpeningHoursSpecification",
		"dayOfWeek": [
		  "Monday",
		  "Tuesday",
		  "Wednesday",
		  "Thursday",
		  "Friday"
		],
		"opens": "09:00",
		"closes": "20:00"
	  },
	  "sameAs": [
		"https://www.instagram.com/solunasites",
		"https://www.facebook.com/solunasites"
	  ],
	  "description": "Soluna Sites is a web design business offering custom-coded and SEO-optimized websites for small businesses and entrepreneurs in Orlando, Florida."
	}
	</script>
	
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-VK7HVJPVSS"></script>
<script is:inline>
	window.dataLayer = window.dataLayer || [];
	function gtag(){dataLayer.push(arguments);}
  	gtag('js', new Date());

  gtag('config', 'G-VK7HVJPVSS');
  </script>

<Seo type={type} title={title} description={description} image={image} noindex={noindex} />

<!-- no fallback as I saw issues with firefox fallback -->
{siteData.useViewTransitions && <ClientRouter fallback="none" />}
