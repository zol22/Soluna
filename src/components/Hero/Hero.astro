---
import { Image } from "astro:assets";
import Button from "@components/Button/Button.astro";
import hero from "@images/hero.jpg";
import heroData from "../../data/heroData.json.ts";

const { title, description, CTA } = heroData;
---

<section
  id="hero"
  class="scroll-animation relative z-10 flex min-h-[100lvh] w-full items-center bg-primary-100 pt-32"
>
  <div class="site-container flex flex-col-reverse gap-10 px-4 md:flex-row md:items-center md:justify-between">
    
    <!-- Hero Text -->
    <div class="items-start flex flex-col max-w-xl">
      <h1 class="col px-4 font-heading-1 text-4xl font-semibold text-[#3b2f2f] md:text-6xl md:leading-tight">
        {title}
      </h1>
      <p class="col px-4 mt-6 text-lg text-[#7c5f5f] md:text-xl">
        {description}
      </p>
      <div class="col mt-8">
        <Button
          variant="ghost"
          arrow="right"
          href="/#contact"
          class="text-xl text-[#3b2f2f] md:text-2xl"
        >
          {CTA}
        </Button>
      </div>
    </div>

    <!-- Hero Image -->
    <div class="col max-w-md w-full">
      <Image
        src={hero}
        alt="Minimalist home office setup with a white desk, MacBook, vintage camera, clear acrylic chair, potted snake plant, and wooden ladder against a white wall"
        class="rounded-xl shadow-lg object-cover w-full h-auto"
        loading="lazy"
      />
    </div>
  </div>
</section>
