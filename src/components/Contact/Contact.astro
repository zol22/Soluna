---
/**
 * * Contact section for the website
 */

import { Image } from "astro:assets";

// components
import ContactForm from "@components/Forms/ContactForm.astro";

interface Props {
	class?: string;
}

const { class: className } = Astro.props as Props;

import hero from "@assets/images/hero.jpg";
---

<section
	id="contact"
	class="scroll-animation my-10 mx-auto max-w-6xl scroll-mt-10 px-4 py-8 md:max-w-6xl md:py-12 bg-primary-100"
	class:list={[className]}
>
	<h2 class="col text-center h2 uppercase text-pretty mt-8 mb-6">Let’s Build Your Website!</h2>
	<div class="grid gap-y-10 md:grid-cols-2 grid-cols-1">
		<div class="border-primary-300 pt-8 md:border-r md:pr-20 md:pl-12">
			<p class="col description text-lg">
				Tell me a bit about your business and what you’re looking for. 
				I’ll respond within 24 hours to set up a quick intro call or message chat.
			</p>
			<div>
				<ul class="mt-5">
					<li>
						<i class="bx bx-phone text-xl"></i>
						<span class="font-semibold">Phone:</span> 
						<a href="tel:+1407-497-2285" class="underline hover:text-primary-500">+1 (407) 497-2285</a>
					  </li>
					  <li>
						<i class="bx bx-envelope text-xl"></i>
						<span class="font-semibold">Email:</span> 
						<a href="mailto:solunasites@gmail.com" class="underline hover:text-primary-500">solunasites@gmail.com</a>
					  </li>

					  <li>
						<i class="bx bx-location-plus text-xl"></i>

						 <span class="font-semibold">Location:</span> Orlando, Florida
					  </li>
				</ul>
			</div>
			<div class="col mx-auto mt-8  overflow-hidden">
				<Image
					src={hero}
					alt="Minimalist home office setup with a white desk, MacBook, vintage camera, clear acrylic chair, potted snake plant, and wooden ladder against a white wall"
					width={450}
					densities={[1.5, 2]}
					class="h-full w-full object-cover"
				/>
			</div>
		</div>
		<div class="md:pr-12 md:pl-20">
			<ContactForm />
		</div>
	</div>
</section>
